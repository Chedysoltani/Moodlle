{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [
      "cordova",
      "dom-mediacapture-record",
      "resize-observer-browser",
      "webpack-env"
    ]
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "src/**/tests/**",
    "src/**/stories/**",
    "src/testing/**",
    "src/**/*.test.ts",
    "src/**/*.stories.*"
  ]
}
